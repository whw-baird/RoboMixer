<div>
  <div>
    <h1>
      Bitter #<%= @the_bitter.id %> details
    </h1>

    <div>
      <div>
        <a href="/bitters">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_bitter/<%= @the_bitter.id %>">
          Delete bitter
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_bitter.name %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_bitter.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_bitter.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit bitter
    </h2>

    <form action="/modify_bitter/<%= @the_bitter.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_bitter.name %>">
      </div>

      <button>
        Update bitter
      </button>
    </form>
  </div>
</div>

<hr>
