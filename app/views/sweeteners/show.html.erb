<div>
  <div>
    <h1>
      Sweetener #<%= @the_sweetener.id %> details
    </h1>

    <div>
      <div>
        <a href="/sweeteners">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_sweetener/<%= @the_sweetener.id %>">
          Delete sweetener
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_sweetener.name %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_sweetener.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_sweetener.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit sweetener
    </h2>

    <form action="/modify_sweetener/<%= @the_sweetener.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_sweetener.name %>">
      </div>

      <button>
        Update sweetener
      </button>
    </form>
  </div>
</div>

<hr>
