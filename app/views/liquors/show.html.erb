<div>
  <div>
    <h1>
      Liquor #<%= @the_liquor.id %> details
    </h1>

    <div>
      <div>
        <a href="/liquors">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_liquor/<%= @the_liquor.id %>">
          Delete liquor
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_liquor.name %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_liquor.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_liquor.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit liquor
    </h2>

    <form action="/modify_liquor/<%= @the_liquor.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_liquor.name %>">
      </div>

      <button>
        Update liquor
      </button>
    </form>
  </div>
</div>

<hr>
