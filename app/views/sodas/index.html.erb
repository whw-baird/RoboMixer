<div>
  <div>
    <h1>
      List of all sodas
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new soda
    </h2>

    <form action="/insert_soda" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <button>
        Create soda
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_sodas.each do |a_soda| %>
      <tr>
        <td>
          <%= a_soda.id %>
        </td>

        <td>
          <%= a_soda.name %>
        </td>

        <td>
          <%= time_ago_in_words(a_soda.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_soda.updated_at) %> ago
        </td>

        <td>
          <a href="/sodas/<%= a_soda.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
