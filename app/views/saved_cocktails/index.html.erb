<div>
  <div>
    <h1>
      List of all saved cocktails
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new saved cocktail
    </h2>

    <form action="/insert_saved_cocktail" method="post">
      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <div>
        <label for="format_id_box">
          Format
        </label>

        <input type="text" id="format_id_box" name="query_format_id">
      </div>

      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="liquor_id_box">
          Liquor
        </label>

        <input type="text" id="liquor_id_box" name="query_liquor_id">
      </div>

      <div>
        <label for="sweetener_id_box">
          Sweetener
        </label>

        <input type="text" id="sweetener_id_box" name="query_sweetener_id">
      </div>

      <div>
        <label for="bitters_id_box">
          Bitters
        </label>

        <input type="text" id="bitters_id_box" name="query_bitters_id">
      </div>

      <div>
        <label for="citrus_id_box">
          Citrus
        </label>

        <input type="text" id="citrus_id_box" name="query_citrus_id">
      </div>

      <div>
        <label for="soda_id_box">
          Soda
        </label>

        <input type="text" id="soda_id_box" name="query_soda_id">
      </div>

      <div>
        <label for="modifier_id_box">
          Modifier
        </label>

        <input type="text" id="modifier_id_box" name="query_modifier_id">
      </div>

      <button>
        Create saved cocktail
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Format
        </th>

        <th>
          Name
        </th>

        <th>
          Liquor
        </th>

        <th>
          Sweetener
        </th>

        <th>
          Bitters
        </th>

        <th>
          Citrus
        </th>

        <th>
          Soda
        </th>

        <th>
          Modifier
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_saved_cocktails.each do |a_saved_cocktail| %>
      <tr>
        <td>
          <%= a_saved_cocktail.id %>
        </td>

        <td>
          <%= a_saved_cocktail.user_id %>
        </td>

        <td>
          <%= a_saved_cocktail.format_id %>
        </td>

        <td>
          <%= a_saved_cocktail.name %>
        </td>

        <td>
          <%= a_saved_cocktail.liquor_id %>
        </td>

        <td>
          <%= a_saved_cocktail.sweetener_id %>
        </td>

        <td>
          <%= a_saved_cocktail.bitters_id %>
        </td>

        <td>
          <%= a_saved_cocktail.citrus_id %>
        </td>

        <td>
          <%= a_saved_cocktail.soda_id %>
        </td>

        <td>
          <%= a_saved_cocktail.modifier_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_saved_cocktail.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_saved_cocktail.updated_at) %> ago
        </td>

        <td>
          <a href="/saved_cocktails/<%= a_saved_cocktail.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
