<div>
  <h1>
    Your Saved Cocktails
  </h1>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Format
        </th>

        <th>
          Name
        </th>

        <th>
          Liquor
        </th>

        <th>
          Sweetener
        </th>

        <th>
          Bitters
        </th>

        <th>
          Citrus
        </th>

        <th>
          Soda
        </th>

        <th>
          Modifier
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_saved_cocktails.each do |a_saved_cocktail| %>
      <tr>
        <td>
          <%= a_saved_cocktail.id %>
        </td>

        <td>
          <%= a_saved_cocktail.user_id %>
        </td>

        <td>
          <%= a_saved_cocktail.format.name %>
        </td>

        <td>
          <%= a_saved_cocktail.name %>
        </td>

        <td>
          <%= a_saved_cocktail.liquor.name %>
        </td>

        <td>
          <%= a_saved_cocktail.sweetener_id %>
        </td>

        <td>
          <%= a_saved_cocktail.bitters_id %>
        </td>

        <td>
          <%= a_saved_cocktail.citrus_id %>
        </td>

        <td>
          <%= a_saved_cocktail.soda_id %>
        </td>

        <td>
          <%= a_saved_cocktail.modifier_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_saved_cocktail.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_saved_cocktail.updated_at) %> ago
        </td>

        <td>
          <a href="/saved_cocktails/<%= a_saved_cocktail.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
