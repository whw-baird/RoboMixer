<!DOCTYPE html>
<html>
  <head>
    <title>RoboMixer 0.1</title>
    <%= csrf_meta_tags %>

    <!-- Expand the number of characters we can use in the document beyond basic ASCII ðŸŽ‰ -->
    <meta charset="utf-8">

    <!-- Make it responsive to small screens -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <link rel="stylesheet" href="/public/robo_styles.css">
  </head>
  <nav>
    <ul>
      <li>
        <a href="/">Home</a>
      </li>
      <li>
        <a href="/generator">RoboMix</a>
      </li>
      <% if session[:user_id] == nil %>
        <li>
          <a href="/user_sign_in">Sign In</a>
        </li>
      <% end %>
      <% if session[:user_id] != nil %>
        <li>
          <a href="/saved_cocktails">Saved Cocktails</a>
        </li>
        <li>
          <a href="/user_sign_out">Sign Out</a>
        </li>
      <% end %>
    </ul>
  </nav>

  <% if notice.present? %>
    <div style="border: thin green solid; color: green">
      <%= notice %>
    </div>
  <% end %>

  <% if alert.present? %>
    <div style="border:thin red solid; color: red">
      <%= alert %>
    </div>
  <% end %>

  <body>
    <%= yield %>
  </body>
</html>
