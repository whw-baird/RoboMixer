          <li class="nav-item  active">
            <a class="nav-link" href="/user_sign_out">Sign Out</a>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>

  <% if notice.present? %>
    <div class="alert alert-success" role="alert">
      <%= notice %>
