<div>
  <div>
    <h1>
      Citrus #<%= @the_citrus.id %> details
    </h1>

    <div>
      <div>
        <a href="/citrus">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_citrus/<%= @the_citrus.id %>">
          Delete citru
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_citrus.name %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_citrus.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_citrus.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit citru
    </h2>

    <form action="/modify_citrus/<%= @the_citrus.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_citrus.name %>">
      </div>

      <button>
        Update citrus
      </button>
    </form>
  </div>
</div>

<hr>
