<div>
  <table border="1">
    <tr>
      <th>
        Format
      </th>

      <th>
        Name
      </th>

      <th>
        Ingredients
      </th>

      <th>
        Instruction
      </th>
    </tr>

    <% @list_of_cocktails.each do |a_cocktail| %>
    <tr>
      <td>
        <%= a_cocktail.format.name %>
      </td>

      <td>
        <%= a_cocktail.name %>
      </td>

      <td>
        <ul>
          <li>
            <%= a_cocktail.liquor.name %>
          </li>

          <% if a_cocktail.sweetener != nil %>
            <li>
              <%= a_cocktail.sweetener.name %>
            </li>
          <% end %>

          <% if a_cocktail.bitters != nil %>
            <li>
              <%= a_cocktail.bitters.name %>
            </li>
          <% end %>

          <% if a_cocktail.citrus != nil %>
            <li>
              <%= a_cocktail.citrus.name %>
            </li>
          <% end %>

          <% if a_cocktail.soda != nil %>
            <li>
              <%= a_cocktail.soda.name %>
            </li>
          <% end %>

          <% if a_cocktail.modifier != nil %>
            <li>
              <%= a_cocktail.modifier.name %>
            </li>
          <% end %>

        </ul>
      </td>

      <td>
        <a href="/cocktails/<%= a_cocktail.name %>">
          Show details
        </a>
      </td>
    </tr>
    <% end %>
  </table>
</div>

